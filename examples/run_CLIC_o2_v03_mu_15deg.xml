 <processor name="MyClicEfficiencyCalculator" type="ClicEfficiencyCalculator">
   <!--ClicEfficiencyCalculator calculates the tracking efficiency and makes some performance plots-->
   <!--Name of the MCParticle input collection-->
   <parameter name="MCParticleCollectionName" type="string" lcioInType="MCParticle">MCParticle </parameter>
   <!--Track collection name-->
   <!-- <parameter name="TrackCollectionName" type="string" lcioInType="Track"> ForwardTracks </parameter> -->
   <parameter name="TrackCollectionName" type="string" lcioInType="Track"> RefittedTracks </parameter>
   <!--Name of the TrackerHit input collections-->
   <parameter name="TrackerHitCollectionNames" type="StringVec" lcioInType="TrackerHitPlane"> OTrackerEndcapHits ITrackerEndcapHits VXDETrackerHits</parameter>
   <parameter name="TrackerHitRelCollectionNames" type="StringVec" lcioInType="LCRelation"> OuterTrackerEndcapHitsRelations  InnerTrackerEndcapHitsRelations  VertexEndcapHitsRelations  </parameter>
   <parameter name="reconstructableDefinition" type="string"> ILDLike </parameter>
   <!--verbosity level of this processor ("DEBUG0-4,MESSAGE0-4,WARNING0-4,ERROR0-4,SILENT")-->
   <!--parameter name="Verbosity" type="string">DEBUG </parameter-->
 </processor>






  <processor name="MyRecoMCTruthLinker_Refit" type="RecoMCTruthLinker">
    <!--links RecontructedParticles to the MCParticle based on number of hits used-->
    <parameter name="MCParticleCollection" type="string" lcioInType="MCParticle"> MCParticle </parameter>
    <!-- <parameter name="TrackCollection" type="string" lcioInType="Track"> ForwardTracks </parameter> -->
    <parameter name="TrackCollection" type="string" lcioInType="Track"> RefittedTracks </parameter>
    <!--Name of the trackMCTruthLink output collection - not created if empty()-->
    <!-- <parameter name="TrackMCTruthLinkName" type="string" lcioOutType="LCRelation"> ForwardTracksMCTruthLink </parameter> -->
    <parameter name="TrackMCTruthLinkName" type="string" lcioOutType="LCRelation"> RefittedTracksMCTruthLink </parameter>
    <!--Name of the MCParticle to Track relation output collection - not created if empty()-->
    <!-- <parameter name="MCTruthTrackLinkName" type="string" lcioOutType="LCRelation"> MCTruthForwardTracksLink </parameter> -->
    <parameter name="MCTruthTrackLinkName" type="string" lcioOutType="LCRelation"> MCTruthRefittedTracksLink </parameter>
    <parameter name="MCParticlesSkimmedName" type="string" lcioOutType="MCParticle"> MCParticleSkimmed </parameter> 
    <parameter name="RecoMCTruthLinkName" type="string" lcioOutType="LCRelation"> RecoMCTruthLink </parameter>
    <!--true: use relations for TrackerHits, false : use getRawHits -->
    <parameter name="UseTrackerHitRelations" type="bool">true </parameter>
    <!--If Using Particle Gun Ignore Gen Stat-->
    <parameter name="UsingParticleGun" type="bool"> true </parameter>
    <parameter name="SimTrackerHitCollections" type="StringVec" lcioInType="SimTrackerHit">VertexEndcapCollection InnerTrackerEndcapCollection OuterTrackerEndcapCollection InnerTrackerEndcapCollection OuterTrackerEndcapCollection </parameter>
    <parameter name="TrackerHitsRelInputCollections" type="StringVec" lcioInType="LCRelation">VertexEndcapHitsRelations InnerTrackerEndcapHitsRelations OuterTrackerEndcapHitsRelations InnerTrackerEndcapHitsRelations OuterTrackerEndcapHitsRelations  </parameter>
    <!--verbosity level of this processor ("DEBUG0-4,MESSAGE0-4,WARNING0-4,ERROR0-4,SILENT")-->
    <parameter name="Verbosity" type="string"> WARNING </parameter>
  </processor>





  <processor name="MyTrackChecker" type="TrackChecker">
    <!--TrackChecker plots pull distributions, track resolution parameters and reconstruction efficiencies-->
    <!--Name of the MCParticle input collection-->
    <parameter name="MCParticleCollectionName" type="string" lcioInType="MCParticle">MCParticle </parameter>
    <!--Name for the output histogram file-->
    <parameter name="OutputFileName" type="string">TrackCheckerHistos.root </parameter>
    <!--Track collection name-->
    <parameter name="TrackCollectionName" type="string" lcioInType="Track">ForwardTracks </parameter>
    <!--Track relation collection name-->
    <!-- <parameter name="TrackRelationCollectionName" type="string" lcioInType="LCRelation">ForwardTracksMCTruthLink </parameter> -->
