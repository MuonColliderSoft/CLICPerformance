    <parameter name="MaxRecordNumber" value="-1" />  
    <parameter name="SkipNEvents" value="0" />  
    <parameter name="SupressCheck" value="false" />  
    <parameter name="GearXMLFile" value="gear_files/gear_CLIC_o2_v03.xml"/>
    <parameter name="DD4hepXMLFile" value="/afs/desy.de/project/ilcsoft/sw/x86_64_gcc44_sl6/HEAD-2015-10-05/lcgeo/HEAD/CLIC/compact/CLIC_o2_v03/CLIC_o2_v03.xml"/>
    <parameter name="Verbosity" options="DEBUG0-4,MESSAGE0-4,WARNING0-4,ERROR0-4,SILENT"> MESSAGE  </parameter> 
    <parameter name="RandomSeed" value="1234567890" />
    <!-- optionally limit the collections that are read from the input file: -->  
    <!--parameter name="LCIOReadCollectionNames">MCParticle PandoraPFOs</parameter-->
  </global>



  <processor name="InitDD4hep" type="InitializeDD4hep">
    <!--InitializeDD4hep reads a compact xml file and initializes the DD4hep::LCDD object-->
    <!--Name of the DD4hep compact xml file to load-->
    <parameter name="DD4hepXMLFile" type="string"> /afs/desy.de/project/ilcsoft/sw/x86_64_gcc44_sl6/HEAD-2015-10-05/lcgeo/HEAD/CLIC/compact/CLIC_o2_v03/CLIC_o2_v03.xml </parameter>
  </processor>


  <processor name="MyLCIOOutputProcessor" type="LCIOOutputProcessor">
